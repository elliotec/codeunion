<div id="services" class="section">
  <div class="fixed-wrapper"><h1>Languages</h1></div>
  <div class="container">
    <div class="content">
      <div class="row">
        <% @languages.each do |language| %>
        <%= link_to language do %>
        <div class="col-md-4 col-sm-6 col-xs-12">
          <div class="service block">
            <div class="icon-wrapper blue">
              <span class="valign"></span>
            </div>
            <h3><%= language.name %></h3>
          </div>
          <br>
        </div>
        <% end %>
        <% end %>
      </div>
      </div><!-- /.content -->
    </div>
  </div>

<% if can? :create, @language %>
  <%= link_to 'New Language', new_language_path, class: "btn btn-large" %>
<% end %>
