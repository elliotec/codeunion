<%= content_for(:pagetitle, "Categories") %>
<% @categories.each do |category| %>
<div class="col-md-4 col-sm-6 col-xs-12">
  <div class="service block">
    <%= link_to '/' + category.name do %>
    <div class="icon-wrapper culighterdark">
      <h2><%= category.name %></h2>
      <p><%= link_to 'Edit', edit_category_path(category) %> </p>
    </div>
    <% end %>
  </div>
  <br>
</div>
<% end %>
</div>
<% if can? :create, @language %>
<%= link_to 'New Category', new_category_path, class: "btn btn-large" %>
<% end %>

