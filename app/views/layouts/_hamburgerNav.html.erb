
<div class="hide-for-large-up">
  <h2 id="nav">NAV</h2>
    <div class="navStuff">
      <section class="search">
        <%= form_tag resources_path, :method => :get do %>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "S", :name => nil %>
        <% end %>
      </section>

      <ul id="accordion">
        <h2 id="languages2">Languages</h2>
        <ul class="languages2">
          <% @allLanguages.each do |language| %>
            <%= link_to '/' + language.name do %>
              <li class="navItem"><%= language.name %></li>
            <% end %>
          <% end %>
        </ul>

        <h2 id="categories2">Categories</h2>
        <ul class="categories2">
          <% @allCategories.each do |category| %>
            <%= link_to '/' + category.name do %>
              <li class="navItem"><%= category.name %></li>
            <% end %>
          <% end %>
        </ul>
      </ul>

      <ul>
        <% if user_signed_in? %>
          <li class="navItem"><%= link_to "Account Settings", edit_user_registration_path%></li>
          <li class="navItem"><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
          <li class="navItem"><%= link_to '+ Resource', new_resource_path%></li>
        <% else %>
          <li class="navItem"><%= link_to "Sign in", new_user_session_path %></li>
          <li class="navItem"><%= link_to "Sign up", new_user_registration_path %></li>
          <li class="navItem"><%= link_to '+ Resource', new_user_session_path %></li>
        <% end %>
      <ul>
    </div>
</div>
