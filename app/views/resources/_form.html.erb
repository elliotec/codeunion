<%= form_for(@resource) do |f| -%>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <article class="form large-push-2 large-8 medium-push-1 medium-10 columns">
    <%= f.label "name", :Title %>
    <%= f.text_field :name, placeholder: "Enter a brief description" %>

    <%= f.text_area :body, :toolbar => 'mini' %>

    <%= f.label :category %>
    <%= f.collection_select :category_id, Category.all, :id, :name %>

    <%= f.label :language %>
    <%= f.collection_select :language_id, Language.all, :id, :name %>


    <%= f.submit %>
   </article>

<% end %>
