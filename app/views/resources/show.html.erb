<%= content_for(:pagetitle, "#{@resource.name}") %>

<%= @resource.body.html_safe %>

<br>

<% @resource.comments.each do |comment| %>
  <%= comment.content %>
<% end %>

<br>

<%= form_for(@resource.comments.build) do |f| %>
  <div class="field">
    <%= f.label Comment %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.number_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :resource_id %><br>
    <%= f.number_field :resource_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<br>

<% if can? :update, @resource %>
  <%= link_to 'Edit', edit_resource_path(@resource) %> |
<% end %>

<%= link_to 'Back', resources_path %>

<% if can? :destroy, @resource %>
  <%= link_to 'Destroy', @resource, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
