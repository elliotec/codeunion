<article class="resource-post">
	<%= content_for(:pagetitle) %>
	<h1><%= @resource.name %></h1>
	<p><%= @resource.body.html_safe %></p>
	<a href="http://twitter.com/share?url=http://codeunion2.herokuapp.com" class="button social" target="_blank"><span class="icon-twitter"></span></a>
	<a href="http://www.facebook.com/sharer.php?u=http://codeunion2.herokuapp.com" class="button social" target="__blank"><span class="icon-facebook"></span></a>
</article>

<article class="resource-comments">
	<%= form_for(@resource.comments.build) do |f| %>
    <%= f.text_area :content %>
    <%= f.hidden_field :resource_id %>
    <%= f.submit :value=>"comment"%>
	<% end %>

	<% @resource.comments.each do |comment| %>
	<p class="comment"><%= comment.content %></p>
	<% end %>
</article>

	<% if can? :update, @resource %>
	  <%= link_to 'Edit', edit_resource_path(@resource) %> |
	<% end %>

	<%= link_to 'Back', resources_path, :class => "hide" %>

	<% if can? :destroy, @resource %>
	  <%= link_to 'Destroy', @resource, method: :delete, data: { confirm: 'Are you sure?' } %>
	<% end %>

